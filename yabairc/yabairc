# yabai -m config status_bar_power_icon_strip   
# yabai -m config status_bar_space_icon        
# yabai -m config status_bar_clock_icon        

# global settings
yabai -m config mouse_follows_focus          on # default: *off*, on
yabai -m config focus_follows_mouse          off # default: *off*, autofocus, autoraise
yabai -m config window_topmost               off
yabai -m config window_opacity               off
yabai -m config window_shadow                off
yabai -m config window_border                on # *on*
yabai -m config window_border_width          4 # default: 4
yabai -m config active_window_border_color   0xff61bd4f # *ff775759*
yabai -m config normal_window_border_color   0xff505050
yabai -m config insert_window_border_color   0xffd75f5f
yabai -m config active_window_opacity        1.0
yabai -m config normal_window_opacity        0.90
yabai -m config split_ratio                  0.382 # golden ratio, *0.5*
yabai -m config auto_balance                 off
yabai -m config mouse_modifier               ctrl
yabai -m config mouse_action1                move
yabai -m config mouse_action2                resize


yabai -m config window_placement second_child # *second_child* (spawns to the right if vertical split, or bottom if horizontal split)
                                             # first_child (# spawns to the left if vertical split, or top if horizontal split)

# general space settings
yabai -m config layout                       bsp
yabai -m config top_padding                  20 # *20*
yabai -m config bottom_padding               20 # *20*
yabai -m config left_padding                 20 # *20*
yabai -m config right_padding                20 # *20*
yabai -m config window_gap                   10 # *10*

echo "yabai configuration loaded.."
